{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Schema",
  "type": "object",
  "properties": {
    "birthday": {
      "type": "string",
      "format": "date-time",
      "description": "User's date of birth in ISO 8601 timestamp format"
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the user account was created"
    },
    "display_name": {
      "type": "string",
      "description": "The user's display name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "The user's email address"
    },
    "phone_number": {
      "type": "string",
      "pattern": "^[0-9]{10,15}$",
      "description": "The user's phone number (digits only, 10â€“15 characters)"
    },
    "uid": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$",
      "description": "The unique identifier for the user"
    }
  },
  "required": ["birthday", "created_time", "display_name", "email", "uid"]
}
